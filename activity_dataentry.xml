<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dataentry"
    android:background="@drawable/back"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name1"
        android:text="Your Name"
        android:textSize="28dp"
        android:fontFamily="cursive"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="90dp"

        />
    <EditText
        android:layout_width="270dp"
        android:id="@+id/enter1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_alignTop="@id/name1"
        android:inputType="text"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dob1"
        android:fontFamily="cursive"
        android:layout_alignLeft="@+id/name1"
        android:text="Birth Date"
        android:textSize="28dp"
        android:layout_marginTop="150dp"

        />
    <EditText
        android:layout_width="270dp"
        android:id="@+id/enter2"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_alignTop="@id/dob1"
        android:inputType="date"
        android:hint="DD/MM/YYYY (optional)"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name2"
        android:text="Love's Name"
        android:textSize="28dp"
        android:layout_alignLeft="@id/name1"
        android:fontFamily="cursive"
        android:layout_marginTop="300dp"

        />

    <EditText
        android:layout_width="265dp"
        android:id="@+id/enter3"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_alignTop="@id/name2"
        android:inputType="text"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dob2"
        android:text="Birth Date"
        android:fontFamily="cursive"
        android:layout_alignLeft="@id/name1"
        android:textSize="28dp"
        android:layout_marginTop="360dp"

        />
    <EditText
        android:layout_width="270dp"
        android:id="@+id/enter4"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_alignTop="@id/dob2"
        android:inputType="date"
        android:hint="DD/MM/YYYY (optional)"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button1"
        android:fontFamily="cursive"
        android:textColor="#F9F6FB"
        android:background="@android:color/holo_red_dark"
        android:textSize="40dp"
        android:layout_centerHorizontal="true"
        android:text="CALCULATE"
        android:layout_marginTop="500dp"
        />


</RelativeLayout>